<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/more_med_doc_imaging_detail_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_more_med_imaging_doc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppTheme.PopupMenu">

        <include
            android:id="@+id/toolbar_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:theme="@style/ThemeOverlay.AppTheme.PopupMenu"
            layout="@layout/toolbar_main" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- main content view. -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/more_med_doc_imaging_detail_fragment_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />

</LinearLayout>
