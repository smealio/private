<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogCustom</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogCustom</item>
        <item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppTheme.PopupMenu</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- DatePickerDialog -->
    <style name="DatePickerDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>
    <!-- TimePickerDialog -->
    <style name="TimePickerDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <!-- Action Bar -->
    <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- action bar background - without android prefix -->
        <item name="background">@color/white</item>
        <!-- action bar elevation - without android prefix -->
        <item name="elevation">4dp</item>

    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.AppTheme.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <!-- popup menu background - NEVER "android:background" !!! in themes -->
        <item name="android:colorBackground">@color/viewLightGrey</item>
        <!-- popup menu item text color -->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Switch Style -->
    <style name="CTCASwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#035642</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <!-- Radio Button -->
    <style name="CTCARadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <!-- Checkbox -->
    <style name="CTCACheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
</resources>