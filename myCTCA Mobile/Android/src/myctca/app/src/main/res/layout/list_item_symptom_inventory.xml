<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_4"
    android:paddingRight="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvSymptomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fatigue"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_18"
            android:layout_margin="@dimen/dp_4" />

        <TextView
            android:id="@+id/tvSymptomRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal Range: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_16"
            android:layout_margin="@dimen/dp_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSymptomObservationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_16"
            android:layout_margin="@dimen/dp_4" />

        <ImageView
            android:id="@+id/increasedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/red"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_arrow_upward_black_24dp" />
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/listSeparator" />
    </LinearLayout>



</LinearLayout>