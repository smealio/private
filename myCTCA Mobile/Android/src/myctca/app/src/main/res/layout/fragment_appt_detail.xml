<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MoreScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:background="@color/white_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_8"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:id="@+id/appt_detail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey" />

                <LinearLayout
                    android:id="@+id/ll_appt_detail_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:id="@+id/appt_detail_date_time"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_150"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_appt_provider_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/provider_icon" />

                    <TextView
                        android:id="@+id/appt_provider_info"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_150"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_appt_detail_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/location_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/dp_14">

                        <TextView
                            android:id="@+id/appt_detail_treatment_facility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_150"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/appt_detail_loc"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_150"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content" />

                        <LinearLayout
                            android:id="@+id/llMapAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/appt_detail_map_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_150"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/appt_detail_map_city_state_zip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_150"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/telehealth_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_39"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/round_button_grey" />

                <Button
                    android:id="@+id/btnGetDirections"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_39"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Get Directions"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/round_button_grey" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appt_detail_patient_instr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appt_detail_patient_instr"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/appt_detail_patient_instr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_150"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appt_detail_sched_notes_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appt_detail_sched_notes"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/appt_detail_sched_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_150"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/appt_additional_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/appt_additional_info_title"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/appt_additional_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_150"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvShareReschCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvShareAppointment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Share"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_2"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tvRescheduleAppointment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Reschedule"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_2"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/tvCancelAppointment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_2"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_reschedule_cancel_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="gone"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/reschedule_cancel_message"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_8"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_24"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/appt_detail_treatment_facility_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/important_phone_numbers"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_below="@+id/appt_detail_treatment_facility_title"
                    android:background="@color/light_gray" />

                <RelativeLayout
                    android:id="@+id/appt_detail_main_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_view">

                    <ImageView
                        android:id="@+id/appt_detail_main_phone_img"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/phone"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="@string/appt_detail_phone_icon_description" />

                    <TextView
                        android:id="@+id/appt_detail_call_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/appt_detail_main_phone_img"
                        android:layout_marginStart="4dp"
                        android:text="@string/appt_detail_call_main"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/appt_detail_call_main_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/appt_detail_main_phone_img"
                        android:layout_below="@+id/appt_detail_call_main_title"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_below="@+id/appt_detail_call_main_phone"
                        android:background="@color/light_gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/appt_detail_sched_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appt_detail_main_phone_layout">

                    <ImageView
                        android:id="@+id/appt_detail_sched_phone_img"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/phone"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="@string/appt_detail_phone_icon_description" />/>

                    <TextView
                        android:id="@+id/appt_detail_call_sched_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/appt_detail_sched_phone_img"
                        android:layout_marginStart="4dp"
                        android:text="@string/appt_detail_call_sched"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/appt_detail_call_sched_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/appt_detail_sched_phone_img"
                        android:layout_below="@+id/appt_detail_call_sched_title"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_below="@+id/appt_detail_call_sched_phone"
                        android:background="@color/light_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/appt_detail_accom_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appt_detail_sched_phone_layout">

                    <ImageView
                        android:id="@+id/appt_detail_accom_phone_img"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/phone"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="@string/appt_detail_phone_icon_description" />/>

                    <TextView
                        android:id="@+id/appt_detail_call_accom_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/appt_detail_accom_phone_img"
                        android:layout_marginStart="4dp"
                        android:text="@string/appt_detail_call_accom"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/appt_detail_call_accom_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/appt_detail_accom_phone_img"
                        android:layout_below="@+id/appt_detail_call_accom_title"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_below="@+id/appt_detail_call_accom_phone"
                        android:background="@color/light_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/appt_detail_trans_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appt_detail_accom_phone_layout">

                    <ImageView
                        android:id="@+id/appt_detail_trans_phone_img"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/phone"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="@string/appt_detail_phone_icon_description" />/>

                    <TextView
                        android:id="@+id/appt_detail_call_trans_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/appt_detail_trans_phone_img"
                        android:layout_marginStart="4dp"
                        android:text="@string/appt_detail_call_trans"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/appt_detail_call_trans_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/appt_detail_trans_phone_img"
                        android:layout_below="@+id/appt_detail_call_trans_title"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
