<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragment.appointmment.ApptRequestCalenderFragment"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Preferred Date"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/gray_150" />

                <ImageView
                    android:id="@+id/close_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_close_black"
                    android:layout_marginRight="@dimen/dp_16" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:textColor="@color/gray_130"
                android:text="Appointment requests must be at least 24 hours in advance." />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_8"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16">

                <FrameLayout
                    android:id="@+id/calender_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred Time"
                android:textColor="@color/gray_150"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="Select all that apply"
                android:layout_marginStart="@dimen/dp_16"
                android:textColor="@color/gray_130" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvMorningSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:cardCornerRadius="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">

                        <CheckBox
                            android:id="@+id/cbMorning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/toggle_check_button" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_16">

                            <TextView
                                android:id="@+id/tvMorningTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Morning"
                                android:textSize="@dimen/sp_18"
                                android:textColor="@color/gray_150" />

                            <TextView
                                android:id="@+id/tvMorningTime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="8 am – 12 pm"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/gray_150" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvNoonSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:cardCornerRadius="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">

                        <CheckBox
                            android:id="@+id/cbNoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/toggle_check_button" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_16">

                            <TextView
                                android:id="@+id/tvNoonTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Afternoon"
                                android:textSize="@dimen/sp_18"
                                android:textColor="@color/gray_150" />

                            <TextView
                                android:id="@+id/tvNoonTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 pm – 4 pm"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/gray_150" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Option"
            android:alpha="0.4"
            android:enabled="false"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_gravity="bottom"
            android:background="@drawable/ctca_round_button_green" />
    </LinearLayout>
</ScrollView>