<LinearLayout
    android:id="@+id/prescription_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prescription_drug_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Prescriptions"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/prescription_status_prescribed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Active, CTCA-Prescribed"
        android:textColor="@color/editTextInput"
        android:textSize="14dp"/>

    <View
        android:id="@+id/prescription_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/listSeparator"/>

</LinearLayout>