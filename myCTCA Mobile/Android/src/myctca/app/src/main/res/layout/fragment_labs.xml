<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/labs_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context="com.myctca.fragment.LabsFragment"
        android:background="@color/viewLightGrey">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/labsRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:clipToPadding="false">

            <com.myctca.common.CTCARecyclerView
                android:id="@+id/labsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:scrollbars="vertical"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Empty Table View -->
        <LinearLayout
            android:id="@+id/labs_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">

            <ImageView
                android:id="@+id/myCTCALogoImageView"
                android:layout_width="200dp"
                android:layout_height="220dp"
                app:srcCompat="@drawable/splash_9"
                android:contentDescription="@string/ctca_logo_description" />

            <TextView
                android:id="@+id/labs_empty_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/empty_list_message"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.core.widget.NestedScrollView>