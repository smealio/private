<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".fragment.MoreReleaseOfInfoFragment">

    <include android:id="@+id/roi_include_layout" layout="@layout/roi_top_banner"/>

    <ScrollView
        android:id="@+id/more_roi_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/sp_16">
            <TextView
                android:id="@+id/forms_library_roi_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/forms_library_roi_heading"
                android:textColor="@color/editTextInput"
                android:textSize="@dimen/sp_16"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textColor="@color/editTextInput"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/download_roi_way_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download_roi_way_one"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/editTextInput"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/download_roi_auth_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_28"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_28"
                android:padding="8dp"
                android:gravity="center"
                android:background="@color/colorPrimary" >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/download_icon"
                        android:tint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:elevation="@dimen/dp_8"
                    android:textSize="@dimen/sp_18"
                    android:text="@string/download_roi_button_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_26">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:textColor="@color/editTextInput"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/download_roi_way_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/download_roi_way_two"
                    android:textColor="@color/editTextInput"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/submit_roi_auth_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_28"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_28"
                android:padding="@dimen/dp_8"
                android:gravity="center"
                android:background="@color/colorPrimary" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tick_box"
                    android:tint="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/dp_8"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/submit_roi_auth_online"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
            <TextView
                android:id="@+id/forms_library_roi_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/forms_library_roi_footer"
                android:textColor="@color/editTextInput"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>