<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/mail_unread_marker"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/mail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="12:00 PM"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/mail_from_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mail_from_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mail_date"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/mail_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mail_from_name"
        app:layout_constraintTop_toBottomOf="@+id/mail_from_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>