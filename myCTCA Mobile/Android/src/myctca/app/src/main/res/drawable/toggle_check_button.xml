<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@drawable/check_circle_icon_purple" />
    <item android:state_pressed="true" android:drawable="@drawable/check_circle_icon_purple" />
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="@dimen/dp_24" android:height="@dimen/dp_24" />
