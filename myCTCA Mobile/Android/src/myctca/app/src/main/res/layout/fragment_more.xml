<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MoreScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_section_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/medical_docs_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/filetext" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_medical_docs"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/health_history_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/health_history_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_health_history"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/patient_reported_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        android:scaleType="fitCenter"
                        app:tint="@color/colorAccent"
                        app:srcCompat="@drawable/patient_reported" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_patient_reported"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/roi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/checksquare" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forms_library"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_resources_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        android:scaleType="fitCenter"
                        app:tint="@color/colorAccent"
                        app:srcCompat="@drawable/my_resources" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_my_resources"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bill_pay_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/billpay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_bill_pay"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_my_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/more_my_account"
                    android:textSize="14dp"
                    android:textColor="@color/colorAccent"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="14dp" />

                <LinearLayout
                    android:id="@+id/user_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/user" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_change_ctca_id"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_activity_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/list" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_view_activity"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_out_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/signout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_sign_out"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/more_help_settings"
                    android:textSize="14dp"
                    android:textColor="@color/colorAccent"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="14dp" />

                <LinearLayout
                    android:id="@+id/contact_us_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_contact_us"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
                <!--
                                <LinearLayout
                                    android:id="@+id/notification_prefs_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="14dp"
                                    android:paddingEnd="24dp"
                                    android:paddingStart="16dp"
                                    android:paddingTop="14dp"
                                    android:clickable="true"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:gravity="start|center_vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="36dp"
                                        android:tint="@color/colorAccent"
                                        android:scaleType="fitCenter"
                                        app:srcCompat="@drawable/notificaton"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/more_notification_prefs"
                                        android:textAppearance="@style/TextAppearance.AppCompat"
                                        android:textSize="20sp"
                                        android:textColor="@color/colorAccent"/>
                                </LinearLayout>
                -->
                <LinearLayout
                    android:id="@+id/fingerprint_pref_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/fingerprint_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_finger_auth_prefs"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_myctca_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingEnd="24dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="36dp"
                        app:tint="@color/colorAccent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/info" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_about_myctca"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
